<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_panel" >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/upper_blue_btn_height"
                android:background="@drawable/drag_panel"
                android:text="Адрес куда"
                android:textColor="#ffffff"
                android:textSize="@dimen/upper_blue_btn_text_size" />
            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                layout="@layout/address_item_editable"/>

            <Button
                android:id="@+id/but_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ АДРЕС"
                android:background="@drawable/yellow_btn_bg"
                android:textColor="#4c4d4f"
                android:textSize="18sp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="#E6E6E6" >

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/but_yellow"
            android:text="ОТМЕНА"
            android:textColor="#FF1E90FF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/but_blue"
            android:text="ГОТОВО"
            android:textColor="#FFFFFF00"
            android:textSize="20dp" android:clickable="false"/>
        
        
    </LinearLayout>

</RelativeLayout>