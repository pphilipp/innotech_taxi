<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include
            android:id="@+id/include1"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            layout="@layout/top_bar" />

           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:orientation="vertical" >

               <Button
                   android:id="@+id/button3"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/upper_blue_btn_height"
                   android:background="@drawable/drag_panel"
                   android:text="ЗА ГОРОД"
                   android:textColor="#ffffff"
                   android:textSize="@dimen/upper_blue_btn_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="НАСЕЛЕННЫЙ ПУНКТ"
                        android:textColor="#4c4d4f" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#FF0000"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edit_nasp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:lines="1"
                        android:singleLine="true"
                        android:textColor="#000000" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:text="ПРИМЕЧАНИЕ"
                    android:textColor="#4c4d4f" />

                <EditText
                    android:id="@+id/edit_d"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="#B6B6B6"
                    android:gravity="bottom" >

                    <Button
                        android:id="@+id/bt_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:text="ОТМЕНА"
                        android:background="@drawable/but_yellow"
            			android:textColor="#FF1E90FF"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/bt_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/but_blue"
                        android:text="ГОТОВО"
                        android:textColor="#FFFFFF00"
                        android:textSize="20dp" />

                </LinearLayout>
                
                </LinearLayout>
    </LinearLayout>