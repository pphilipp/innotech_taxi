<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >



        <LinearLayout
            android:id="@+id/but_call"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/but_yellow">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_weight="4"
                android:src="@drawable/phone_green" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:lines="2"
                android:text="ПОЗВОНИТЬ ВОДИТЕЛЮ"
                android:textColor="#FF1E90FF"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/but_blue"
            android:singleLine="true"
            android:text="Выхожу"
            android:textColor="#FFFFFF00"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/someLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/gray_without_corners"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Автомобиль подан"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/upper_text_borders"
            >

            <TextView
                android:id="@+id/txt_car_brand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:text="Auto brand"
                android:gravity="center_horizontal"

                android:textSize="25sp"
                android:textColor="#48443E"
                android:textStyle="bold" />

        </LinearLayout>



        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:background="@drawable/middle_text"
            >

            <TextView
                android:id="@+id/txt_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CarColor"
                android:gravity="center"
                android:textSize="23sp"
                android:textColor="#48443E"
                android:textStyle="bold"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/vertical_left_border"
                android:paddingLeft="4dp"
                android:paddingRight="2dp">



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/nomer"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/txt_num"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="20sp"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Year"
                android:textSize="20sp"
                android:textColor="#48443E"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="TextView"
                android:textSize="20sp"
                android:textColor="#48443E" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bottom_corners">

            <TextView
                android:id="@+id/go_out"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_corners"
                android:gravity="center"
                android:text="ВЫХОДИТЕ, ОЖИДАНИЕ ПЛАТНОЕ"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fr_poisk"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gray_without_corners" >

        <TextView
            android:id="@+id/txt_poisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="автомобиль по адресу"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </FrameLayout>

</RelativeLayout>