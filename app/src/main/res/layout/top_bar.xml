<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/top_bar_bg"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageButton
            android:id="@+id/it_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_1" />

        <ImageView
            android:id="@+id/it_1_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/car_inactive" />

        <TextView
            android:id="@+id/txt_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:text="ЗАКАЗ"
            android:textColor="#080000"
            android:textSize="13dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/it_4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_1" />

        <ImageView
            android:id="@+id/it_4_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/map_icon_inactive" />

        <TextView
            android:id="@+id/txt_t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:lines="1"
            android:text="КАРТА"
            android:textColor="#080000"
            android:textSize="13dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/it_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_1" />

        <ImageView
            android:id="@+id/it_2_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/fold_inactive" />

        <TextView
            android:id="@+id/txt_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:text="ШАБЛОН"
            android:textColor="#080000"
            android:textSize="13dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="1dp"
        android:layout_weight="1" >

        <ImageButton
            android:id="@+id/it_3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_1" />

        <ImageView
            android:id="@+id/it_3_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/cab_inactive" />

        <TextView
            android:id="@+id/txt_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="4dp"
            android:text="КАБИНЕТ"
            android:textColor="#080000"
            android:textSize="13dp" />
    </FrameLayout>

</LinearLayout>