<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/instruction_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address_instruction"
        android:gravity="center"
        android:textColor="#4c4d4f"
        android:layout_margin="10dp"/>

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/address_layout_for_dialog"/>

    <TextView
        android:id="@+id/warning_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f50505"
        android:gravity="center"
        android:text="@string/address_error"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/but_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancle"
            android:background="@drawable/yellow_btn_bg"
            android:textColor="#4c4d4f"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/bottom_panel" />

        <Button
            android:id="@+id/but_add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_address"
            android:background="@drawable/yellow_btn_bg"
            android:textColor="#4c4d4f"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/bottom_panel" />

    </LinearLayout>


</LinearLayout>