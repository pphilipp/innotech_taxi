<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"

    android:padding="5dp">

    <!--android:background="@drawable/address_item_background"-->

    <LinearLayout
        android:id="@+id/addressLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="3"
                android:gravity="right">

                <TextView
                    android:id="@+id/txt_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="УЛИЦА"
                    android:textColor="#4c4d4f" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="* "
                    android:textColor="#FF0000"
                    android:textSize="17sp" />


            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.webcab.elit.adapters.AutoCompleteLoadding
                    android:id="@+id/aut1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_active_border"
                    android:ems="10"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"

                    android:paddingBottom="3dp"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColor="#000000">


                </com.webcab.elit.adapters.AutoCompleteLoadding>

                <ProgressBar
                    android:id="@+id/pr_str"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:padding="3dp"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="3"
                android:gravity="right">

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="ДОМ"
                    android:textColor="#4c4d4f" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="* "
                    android:textColor="#FF0000"
                    android:textSize="17sp" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <AutoCompleteTextView
                    android:id="@+id/aut2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:background="@drawable/edittext_active_border"
                    android:ems="10"
                    android:lines="1"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingBottom="3dp"
                    android:paddingLeft="10dp"
                    android:paddingStart="5dp"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:textColor="#000000">


                </AutoCompleteTextView>

                <ProgressBar
                    android:id="@+id/pr_dom"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>