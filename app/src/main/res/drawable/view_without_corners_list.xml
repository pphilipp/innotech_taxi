<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >

            <corners
                    android:radius="5dp" />

            <stroke
                    android:width="1dp"
                    android:color="#848484" />

            <gradient
                    android:angle="90"
                    android:centerColor="#FFFFFF"
                    android:endColor="#FFFFFF"
                    android:startColor="#FFFFFF" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"
                android:color="#00FFFFFF">

            <corners
                    android:radius="5dp" />

            <gradient
                    android:angle="-90"
                    android:centerY="0.25"
                    android:centerColor="#00FFFFFF"
                    android:endColor="#00FFFFFF"
                    android:startColor="#848484" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
               android:color="#00FFFFFF">

            <corners
                    android:radius="5dp" />

            <gradient
                    android:angle="180"
                    android:centerX="0.015"
                    android:centerColor="#00FFFFFF"
                    android:endColor="#00FFFFFF"
                    android:startColor="#848484" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"
               android:color="#00FFFFFF">

            <corners
                    android:radius="5dp" />

            <gradient
                    android:angle="360"
                    android:centerX="0.015"
                    android:centerColor="#00FFFFFF"
                    android:endColor="#00FFFFFF"
                    android:startColor="#848484" />

        </shape>
    </item>

</layer-list>